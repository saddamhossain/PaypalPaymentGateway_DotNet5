@using Newtonsoft.Json
@model PayPal.Api.WebProfileList

@{ ViewBag.Title = "Web Experience Profiles"; }

<div class="heads" style="background: url(/public/img/brewery-back1.jpg) 50% 27%;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2><span>//</span> Web Experience Profiles</h2>
            </div>
        </div>
    </div>
</div>

<!-- begin:content -->
<div class="page-content">
    <div class="container">
        <div class="row confirm">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Flow Config</th>
                            <th>Input Fields</th>
                            <th>Presentation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var profile in Model)
                        {
            <tr>
                <td>@profile.id</td>
                <td>@profile.name</td>
                <td>@JsonConvert.SerializeObject(profile.flow_config)</td>
                <td>@JsonConvert.SerializeObject(profile.input_fields)</td>
                <td>@JsonConvert.SerializeObject(profile.presentation)</td>
            </tr>}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
